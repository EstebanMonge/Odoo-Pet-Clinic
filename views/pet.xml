<odoo>
  <data>

    <!-- Pet Tree View -->
    <record model="ir.ui.view" id="pet_klinik_pet_tree">
      <field name="name">pet_klinik.pet_tree</field>
      <field name="model">pet_klinik.pet</field>
      <field name="arch" type="xml">
        <tree string="Pet">
          <field name="pet_id" />
          <field name="name" />
          <field name="owner_name" />
          <field name="type" />
        </tree>
      </field>
    </record>

    <!-- Pet Form View -->
    <record model="ir.ui.view" id="pet_klinik_pet_form">
      <field name="name">pet_klinik.pet_form</field>
      <field name="model">pet_klinik.pet</field>
      <field name="arch" type="xml">
        <form string="Pet">
          <sheet>
            <div class="oe_title">
              <h1>
                <field name="pet_id" />
              </h1>
            </div>
            <group>
              <field name="image" widget="image" class="oe_avatar" />
            </group>
            <group name="data">
              <group>
                <field name="name" />
                <field name="age" />
                <field name="gender" />
              </group>
              <group>
                <field name="type" />
                <field name="breed" />
                <field name="owner_name" />
              </group>
            </group>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers" />
            <field name="activity_ids" widget="mail_activity" />
            <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}" />
          </div>
        </form>
      </field>
    </record>

    <!-- Pet Kanban View -->
    <record id="pet_klinik_pet_kanban" model="ir.ui.view">
      <field name="name">pet_klinik.pet_kanban</field>
      <field name="model">pet_klinik.pet</field>
      <field name="arch" type="xml">
        <kanban>
          <field name="id" />
          <field name="image" />
          <field name="name" />
          <field name="age" />
          <field name="owner_name" />
          <field name="type" />
          <field name="breed" />
          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_pet_klinik_pet_kanban">
                <t t-if="record.image.raw_value">
                  <div class="o_kanban_image_fill_left d-none d-md-block" t-attf-style="background-image:url('#{kanban_image('pet_klinik.pet', 'image', record.id.raw_value)}')" />
                </t>
                <t t-else="">
                  <img class="o_kanban_image" alt="Avatar" t-att-src="_s + '/pet_klinik/static/avatar/pet_avatar.png'" />
                </t>
                <div class="oe_kanban_details">
                  <strong class="o_kanban_record_title">
                    <field name="name" />
                  </strong>
                  <div class="o_kanban_tags_section" />
                  <ul>
                    <li>
                      Owner :
                      <field name="owner_name" />
                    </li>
                    <li>
                      Umur :
                      <field name="age" />
                    </li>
                    <li>
                      Jenis :
                      <span>
                        <field name="type" />
                        -
                        <field name="breed" />
                      </span>

                    </li>
                  </ul>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <!-- Pet Graph View -->
    <record id="pet_klinik_pet_graph" model="ir.ui.view">
      <field name="name">pet_klinik.pet_graph</field>
      <field name="model">pet_klinik.pet</field>
      <field name="arch" type="xml">
        <graph string="Pet Graph" type="pie">
          <field name="name" />
          <field name="type" type="measure" />
          <field name="breed" type="measure" />
        </graph>
      </field>
    </record>

    <!-- Pet Search View -->
    <record id="pet_klinik_pet_search" model="ir.ui.view">
      <field name="name">pet_klinik.pet_search</field>
      <field name="model">pet_klinik.pet</field>
      <field name="arch" type="xml">
        <search string="Search Pet">
          <field name="name" filter_domain="['|',('name', 'ilike', self),('pet_id', 'ilike', self)]" />
          <field name="pet_id" />
          <field name="name" />
          <field name="type" />
          <separator />
          <filter string="Jantan" name="male" domain="[('gender', '=', 'jantan')]" />
          <filter string="Betina" name="female" domain="[('gender', '=', 'betina')]" />
          <group expand="0" string="Group By">
            <filter string="Gender" name="gender" context="{'group_by':'gender'}" />
            <filter string="Jenis" name="type" context="{'group_by':'type'}" />
            <filter string="Ras" name="breed" context="{'group_by':'breed'}" />
          </group>
        </search>
      </field>
    </record>

    <!-- Pet Action Window -->
    <record model="ir.actions.act_window" id="pet_klinik_pet_action_window">
      <field name="name">Pet</field>
      <field name="res_model">pet_klinik.pet</field>
      <field name="view_mode">tree,form,kanban,graph</field>
    </record>

    <!-- Menu Root -->
    <menuitem name="Pet Klinik" id="pet_klinik.menu_root" />

    <!-- Menu Patient -->
    <menuitem name="Patient" id="pet_klinik.patient" parent="pet_klinik.menu_root" />

    <!-- Menu Patient -> Pet -->
    <menuitem name="Pet" id="pet_klinik.menu_pet" parent="pet_klinik.patient" action="pet_klinik_pet_action_window" />
  </data>
</odoo>