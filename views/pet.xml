<odoo>
    <data>
        <record model="ir.ui.view" id="pet_klinik_pet_tree">
            <field name="name">pet_klinik.pet_tree</field>
            <field name="model">pet_klinik.pet</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="pet_id" />
                    <field name="name" />
                    <field name="owner" />
                    <field name="type" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="pet_klinik_pet_form">
            <field name="name">pet_klinik.pet_form</field>
            <field name="model">pet_klinik.pet</field>
            <field name="arch" type="xml">
                <form string="Pet">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="pet_id" />
                            </h1>
                        </div>
                        <group>
                            <field name="image" widget="image" class="oe_avatar" />
                        </group>
                        <group name="data">
                            <group>
                                <field name="name" />
                                <field name="age" />
                                <field name="gender" />
                            </group>
                            <group>
                                <field name="type" />
                                <field name="breed" />
                                <field name="owner" />
                            </group>
                        </group>
                        <group>
                            <field name="appointment" />
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}" />
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="pet_klinik_pet_action_window">
            <field name="name">Pet</field>
            <field name="res_model">pet_klinik.pet</field>
            <field name="view_mode">tree,form</field>

        </record>

        <menuitem name="Pet Klinik" id="pet_klinik.menu_root" />

        <menuitem name="Patient" id="pet_klinik.patient" parent="pet_klinik.menu_root" />

        <menuitem name="Pet" id="pet_klinik.menu_pet" parent="pet_klinik.patient" action="pet_klinik_pet_action_window" />
    </data>
</odoo>