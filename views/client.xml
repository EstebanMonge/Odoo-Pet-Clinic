<odoo>
  <data>

    <!-- Client Tree View -->
    <record model="ir.ui.view" id="pet_klinik_client_tree">
      <field name="name">pet_klinik.client_tree</field>
      <field name="model">pet_klinik.client</field>
      <field name="arch" type="xml">
        <tree>
          <field name="client_id" />
          <field name="name" />
          <field name="phone" />
          <field name="email" />
        </tree>
      </field>
    </record>

    <!-- Client Form View -->
    <record model="ir.ui.view" id="pet_klinik_client_form">
      <field name="name">pet_klinik.client_form</field>
      <field name="model">pet_klinik.client</field>
      <field name="arch" type="xml">
        <form string="Client">
          <sheet>
            <!-- Client Button Box -->
            <div class="oe_button_box" name="button_box">
              <button name="open_client_pet" class="oe_stat_button" type="object" icon="fa-paw">
                <field string="Binatang Peliharaan" name="pet_count" widget="statinfo" />
              </button>
              <button name="open_client_appointment" class="oe_stat_button" type="object" icon="fa-calendar">
                <field string="Janji" name="appointment_count" widget="statinfo" />
              </button>
            </div>
            <div class="oe_title">
              <h1>
                <field name="client_id" />
              </h1>
            </div>
            <group>
              <field name="image" widget="image" class="oe_avatar" />
            </group>
            <group>
              <group>
                <field name="name" />
                <field name="age" />
                <field name="gender" />
              </group>
              <group>
                <field name="phone" />
                <field name="email" />
                <field name="address" />
              </group>
            </group>
            <notebook>
              <page string="Pets">
                <field name="pet" />
              </page>
              <page string="Appointments">
                <field name="appointment" />
              </page>
            </notebook>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers" />
            <field name="activity_ids" widget="mail_activity" />
            <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}" />
          </div>
        </form>
      </field>
    </record>

    <!-- Client Kanban View -->
    <record id="pet_klinik_client_kanban" model="ir.ui.view">
      <field name="name">pet_klinik.client_kanban</field>
      <field name="model">pet_klinik.client</field>
      <field name="arch" type="xml">
        <kanban>
          <field name="id" />
          <field name="image" />
          <field name="name" />
          <field name="phone" />
          <field name="email" />
          <field name="address" />
          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_pet_klinik_pet_kanban">
                <t t-if="record.image.raw_value">
                  <div class="o_kanban_image_fill_left d-none d-md-block" t-attf-style="background-image:url('#{kanban_image('pet_klinik.client', 'image', record.id.raw_value)}')" />
                </t>
                <t t-else="">
                  <img class="o_kanban_image" alt="Avatar" t-att-src="_s + '/base/static/img/avatar.png'" />
                </t>
                <div class="oe_kanban_details">
                  <strong class="o_kanban_record_title">
                    <field name="name" />
                  </strong>
                  <div class="o_kanban_tags_section" />
                  <ul>
                    <li>
                      Phone :
                      <field name="phone" />
                    </li>
                    <li>
                      Email :
                      <field name="email" />
                    </li>
                    <li>
                      Address :
                      <field name="address" />
                    </li>
                  </ul>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <!-- Client Search View -->
    <record id="pet_klinik_client_search" model="ir.ui.view">
      <field name="name">pet_klinik.client_search</field>
      <field name="model">pet_klinik.client</field>
      <field name="arch" type="xml">
        <search string="Search Client">
          <field name="name" filter_domain="['|',('name', 'ilike', self),('client_id', 'ilike', self)]" />
          <field name="client_id" />
          <field name="name" />
          <separator />
          <filter string="Laki-laki" name="male" domain="[('gender', '=', 'laki-laki')]" />
          <filter string="Perempuan" name="female" domain="[('gender', '=', 'perempuan')]" />
          <group expand="0" string="Group By">
            <filter string="Gender" name="gender" context="{'group_by':'gender'}" />
          </group>
        </search>
      </field>
    </record>

    <!-- Client Action Window -->
    <record model="ir.actions.act_window" id="client_klinik_client_action_window">
      <field name="name">Client</field>
      <field name="res_model">pet_klinik.client</field>
      <field name="view_mode">tree,form,kanban</field>
    </record>

    <!-- Menu Root -->
    <menuitem name="Pet Klinik" id="pet_klinik.menu_root" />

    <!-- Menu Patient -->
    <menuitem name="Patient" id="pet_klinik.patient" parent="pet_klinik.menu_root" />

    <!-- Menu Patient -> Client -->
    <menuitem name="Client" id="pet_klinik.menu_client" parent="pet_klinik.patient" action="client_klinik_client_action_window" />
  </data>
</odoo>